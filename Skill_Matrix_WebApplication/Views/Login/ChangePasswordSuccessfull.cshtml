
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Skill Matrix - ChangePassword Success </title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <link rel="shortcut icon" href="http://www.onwardgroup.com/bbt-onwardgroup-pro/wp-content/themes/TheOnwardGroup/images/favicon.png">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">

        function changeHashOnLoad() {
            window.location.href += "#";
            setTimeout("changeHashAgain()", "50");
        }

        function changeHashAgain() {
            window.location.href += "1";
        }

        var storedHash = window.location.hash;
        window.setInterval(function () {
            if (window.location.hash != storedHash) {
                window.location.hash = storedHash;
            }
        }, 50);

    </script>
</head>
<body onload="changeHashOnLoad();">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Password Change Successfully</div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            <div class="alert bg-info" role="alert"><em class="fa fa-lg fa-warning">&nbsp;</em> your password is change successfully</div>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("Index","Login")">Click here to login</a>
                        </div>
                    </fieldset>

                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
