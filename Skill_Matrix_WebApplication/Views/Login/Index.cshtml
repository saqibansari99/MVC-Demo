
@model Skill_Matrix_Model.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="-1" />
    <title>Skill Matrix - Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <link rel="shortcut icon" href="http://www.onwardgroup.com/bbt-onwardgroup-pro/wp-content/themes/TheOnwardGroup/images/favicon.png">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        function changeHashOnLoad() {
            window.location.href += "#";
            setTimeout("changeHashAgain()", "50");
        }

        function changeHashAgain() {
            window.location.href += "1";
        }

        var storedHash = window.location.hash;
        window.setInterval(function () {
            if (window.location.hash != storedHash) {
                window.location.hash = storedHash;
            }
        },
            50);
    </script>
</head>
<body onload="changeHashOnLoad();">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.Emp_Id, new { @class = "form-control", @placeholder = "Employee ID", @maxlength = "6", @autocomplete = "off" })
                                @Html.ValidationMessageFor(u => u.Emp_Id, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.Emp_Password, new { @class = "form-control", @placeholder = "Password", @type = "password", @autocomplete = "off" })
                                @Html.ValidationMessageFor(u => u.Emp_Password, "", new { @class = "text-danger" })
                            </div>
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </fieldset>
                    }
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
